<?xml version="1.0" encoding="UTF-8"?>

<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    					http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <!-- unidade de persistencia com o nome financas -->
    <persistence-unit name="dwjloc">

        <!-- Implementação do JPA, no nosso caso Hibernate -->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <!-- Aqui são listadas todas as entidades -->
        <class>br.edu.ifsuldeminas.dwjloc.model.EstadoFerramenta</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.Ferramenta</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.Funcionalidade</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.Grupo</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.PessoaFisica</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.PessoaJuridica</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.TipoFerramenta</class>
        <class>br.edu.ifsuldeminas.dwjloc.model.Usuario</class>


        <properties>
            <!-- Propriedades JDBC -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />		<!-- Driver -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/grupo4"/>	<!-- Banco -->
            <property name="javax.persistence.jdbc.user" value="root"/>							<!-- Usuário -->
            <property name="javax.persistence.jdbc.password" value="bacon"/>					<!-- Senha -->

            <!-- Configurações específicas do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> 	<!-- Criação automatizada -->
            <property name="hibernate.show_sql" value="false" />			<!-- Mostra SQL -->
            <property name="hibernate.format_sql" value="true" />		<!-- SQL formatado -->
        </properties>
    </persistence-unit>
</persistence>